<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.matteolobello.palazzovenezia.ui.activity.IntroductionActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/introduction_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true">

        <com.rd.PageIndicatorView
            android:id="@+id/viewpager_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="16dp"
            app:piv_animationType="worm"
            app:piv_interactiveAnimation="true"
            app:piv_padding="8dp"
            app:piv_radius="4dp"
            app:piv_selectedColor="@android:color/white"
            app:piv_unselectedColor="@android:color/darker_gray"
            app:piv_viewPager="@id/introduction_view_pager" />

    </FrameLayout>

</RelativeLayout>
